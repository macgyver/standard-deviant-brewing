# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true


[*]
charset = utf-8
indent_style = tab
trim_trailing_whitespace = true
# Unix-style eol and eof
end_of_line = lf
insert_final_newline = true

# yml requires space-indentation
[*.yml]
indent_style = space
indent_size = 4

# npm will always put it back to this :/
[package.json]
indent_style = space
indent_size = 2
